{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "watchAssets": true,
    "plugins": [{
      "name": "@nestjs/swagger",
      "options": {
        "classValidatorShim": true,
        "introspectComments": false,
        "dtoFileNameSuffix": [
          ".dto.ts",
          ".entity.ts"
        ],
        "dtoKeyOfComment": "description"
      }
    }
  ]

  }
}